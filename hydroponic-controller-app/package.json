{
  "name": "hydroponic-controller-app",
  "version": "0.1.0",
  "author": "Charlemagne Wong <charlemagnew13@gmail.com>",
  "description": "TODO",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "cross-env": "^7.0.3",
    "disk-space": "^1.1.0",
    "electron-is-dev": "^1.2.0",
    "glob": "^7.1.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-modal": "^3.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "react-styles-hook": "^1.1.2",
    "serialport": "^9.0.4",
    "single-instance": "^0.0.1",
    "usb": "^1.6.5",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "electron-builder node-gyp-rebuild --platform linux",
    "postinstall": "electron-builder install-app-deps",
    "elc-rebuild": "electron-rebuild -f -w serialport, fs, usb, diskspace",
    "build-project": "yarn electron-builder"
  },
  "build": {
    "appId": "com.cmasterx.hydroponic-greenhouse",
    "files": [
      "node_modules/**/*",
      "app/**/*",
      "package.json",
      {
        "from": "build/static/**/*",
        "to": "static/**/*"
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/serialport": "^8.0.1",
    "concurrently": "^5.3.0",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.3.4",
    "wait-on": "^5.2.1"
  }
}
